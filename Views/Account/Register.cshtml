@model RegisterViewModel

@{ 
    ViewBag.Title = "User Registration";
}

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-12 main-content-container text-left pl-4 pr-4 pl-lg-5 pr-lg-5 pl-md-5 pr-md-5 pb-3 pb-lg-2 pb-md-2 pb-sm-2 mb-3 mb-sm-5 mb-md-2 mb-lg-2  mb-xl-2">
            <div class="text-left pt-4">
                <h2 class="huge-text">Create new account</h2>
            </div>
            <form method="post">
                <label asp-for="Email" class="normal-text"></label>
                <input type="text" asp-for="Email" class="form-control loginInput" placeholder="Enter email address..." name="Email" />
                <label asp-for="AccountName" class="normal-text"></label>
                <input type="text" asp-for="AccountName" class="form-control loginInput" placeholder="Enter account name..." name="AccountName" />

                <label asp-for="Password" class="normal-text"></label>
                <input type="password" asp-for="Password" class="form-control loginInput" placeholder="Enter password..." name="Password" />
                <label asp-for="ConfirmPassword" class="normal-text"></label>
                <input type="password" asp-for="ConfirmPassword" class="form-control loginInput" placeholder="Confirm password..." name="ConfirmPassword" />
                <div class="m-4"></div>
                <div class="row justify-content-center">
                    <button type="submit" class="btn btn-primary main-button">REGISTER</button>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </form>
            <div class="m-4"></div>
        </div>
    </div>